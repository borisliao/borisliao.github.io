---
import HeadLayout from "../components/HeadLayout.astro";
import profile from "../images/IMG_0405.jpeg";

const response = await fetch(
  "https://raw.githubusercontent.com/borisliao/borisliao/refs/heads/main/README.md",
);
const readme = (await response.text()).split("\n");
---

<HeadLayout>
  <div
    style={{
      display: "flex",
      alignItems: "center",
      justifyContent: "center",
      gap: "1em",
    }}
  >
    <img
      src={profile.src}
      style={{
        width: "50vw",
        height: "50vw",
      }}
      alt="Boris Liao profile picture"
    />
    <div>
      {
        readme.map((line) =>
          line.startsWith("##") ? <h2>{line.slice(2)}</h2> : <p>{line}</p>,
        )
      }
    </div>
  </div>
  <div
    style={{
      display: "flex",
      alignItems: "center",
      justifyContent: "center",
      gap: "1em",
    }}
  >
    <p>Navigate to:</p>
    <a href="/test">Test</a>
    <a href="https://borisliao.goatcounter.com">Page Visit Stats</a>
    <a
      href={import.meta.env.DEV
        ? "https://borisliao.github.io/storybook"
        : "/storybook"}>Storybook</a
    >
    <a href="https://github.com/borisliao">GitHub</a>
    <a href="https://www.linkedin.com/in/boris-liao/">LinkedIn</a>
  </div>
</HeadLayout>
